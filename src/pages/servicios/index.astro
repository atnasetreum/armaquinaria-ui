---
import ContactButton from "@components/ContactButton.astro";
import Breadcrumb from "@components/Breadcrumb.astro";
import Layout from "@layouts/Layout.astro";

const breadcrumbItems = [{ label: "Servicios", href: "#" }];

const services = [
  {
    title: "Venta",
    description:
      "Compre maquinaria de construcción de alta calidad para sus proyectos.",
    icon: "M13.5 21v-7.5a.75.75 0 01.75-.75h3a.75.75 0 01.75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349m-16.5 11.65V9.35m0 0a3.001 3.001 0 003.75-.615A2.993 2.993 0 009.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 002.25 1.016c.896 0 1.7-.393 2.25-1.016a3.001 3.001 0 003.75.614m-16.5 0a3.004 3.004 0 01-.621-4.72L4.318 3.44A1.5 1.5 0 015.378 3h13.243a1.5 1.5 0 011.06.44l1.19 1.189a3 3 0 01-.621 4.72m-13.5 8.65h3.75a.75.75 0 00.75-.75V13.5a.75.75 0 00-.75-.75H6.75a.75.75 0 00-.75.75v3.75c0 .415.336.75.75.75z",
  },
  {
    title: "Renta",
    description:
      "Renta de maquinaria para proyectos de corto plazo o necesidades específicas.",
    icon: "M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
  },
  {
    title: "Reparación",
    description:
      "Servicios expertos de mantenimiento y reparación para su maquinaria.",
    icon: "M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z",
  },
];

const title = "Servicios - AR Maquinaria";
const description = `
  Descubra los servicios de AR Maquinaria para la venta, renta y reparación de maquinaria de construcción en México.
  `;
---

<Layout title={title} description={description}>
  <main class="container mx-auto py-8 px-4">
    <Breadcrumb items={breadcrumbItems} />
    <h1 class="text-3xl font-bold mb-8 text-center text-primary">
      Nuestros servicios
    </h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      {
        services.map((service) => (
          <div class="bg-white rounded-lg shadow-md p-6 flex flex-col items-center text-center transition-transform hover:scale-105">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-16 h-16 text-secondary mb-4"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d={service.icon}
              />
            </svg>
            <h2 class="text-2xl font-semibold mb-2 text-primary">
              {service.title}
            </h2>
            <p class="text-gray-600">{service.description}</p>
          </div>
        ))
      }
    </div>
    <div class="text-center">
      <p class="text-lg mb-4">
        ¿Necesita más información sobre nuestros servicios? ¡Estamos aquí para
        ayudarle!
      </p>
      <ContactButton text="Contactanos ahora mismo" class="text-lg px-6 py-3" />
    </div>
  </main>
</Layout>

<!-- Structured Data for Services Page -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "serviceType": "Construction Machinery Services",
    "provider": {
      "@type": "Organization",
      "name": "AR Maquinaria",
      "url": "https://www.armaquinaria.com"
    },
    "areaServed": {
      "@type": "Country",
      "name": "Spain"
    },
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Construction Machinery Services",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Sales",
            "description": "Purchase high-quality construction machinery for your projects."
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Rental",
            "description": "Rent machinery for short-term projects or specific needs."
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Repair",
            "description": "Expert maintenance and repair services for your machinery."
          }
        }
      ]
    }
  }
</script>
