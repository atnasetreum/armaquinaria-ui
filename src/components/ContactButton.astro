---
interface Props {
  text?: string;
  class?: string;
}

const { text = "Contactar ahora", class: className = "" } = Astro.props;
---

<a
  href="/contacto"
  class={`inline-block mt-4 bg-secondary text-white font-bold py-2 px-4 rounded hover:bg-opacity-90 transition-colors ${className}`}
>
  {text}
</a>
